block section form area
    <!-- -----section form area start----- -->
        section#home 
            div.container
                div.home-text
                    h1.h-primary 
                        |Search a Donor in Your Area
                div.searchbox        
                    form(action="/searchresult", method="post") 
                        div.search-input.btn
                            input.form-control(type="text",name="country",placeholder="Country Name")
                        div.search-input.btn
                            input.form-control(type="text",name="city",placeholder="City Name")
                        div.search-input.btn
                            select.form-control.chosen-select(name="bloodgroup", data-placeholder="Choose Blood Group")
                                option(value="", disabled, selected, hidden )  
                                    |Choose Blood Group
                                option(value="A+")  
                                    |A+
                                option(value="A-")  
                                    |A-
                                option(value="B+")  
                                    |B+
                                option(value="B-")  
                                    |B-
                                option(value="AB+")  
                                    |AB+
                                option(value="AB-")  
                                    |AB-
                                option(value="O+")  
                                    |O+
                                option(value="O-")  
                                    |O-        
                        div.search-input.btn
                            input(type="submit", value="Search Donor", name="form_search")
    <!-- -----section form area end----- -->


block blood gallery 
    <!-- -----blood gallery start----- -->
        div.blood-gallery
            div.container 
                div.headline
                    h2 Blood Groups
                    div.headline-icon    

                div.blood-grid
                    div.blood-group
                        div.blood-item
                            a(href="/searchresult/AO%2B") A+     
                    div.blood-group
                        div.blood-item
                            a(href="/searchresult/A-") A-     
                    div.blood-group
                        div.blood-item
                            a(href="/searchresult/BO%2B") B+     
                    div.blood-group
                        div.blood-item
                            a(href="/searchresult/B-") B-     
                    div.blood-group
                        div.blood-item
                            a(href="/searchresult/ABO%2B") AB+     
                    div.blood-group
                        div.blood-item
                            a(href="/searchresult/AB-") AB-     
                    div.blood-group
                        div.blood-item
                            a(href="/searchresult/OO%2B", name="opositive") O+     
                    div.blood-group
                        div.blood-item
                            a(href="/searchresult/O-") O-     
    <!-- -----blood gallery End----- -->

